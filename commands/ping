#!/bin/bash
# this command pings servers and displays the delay
# arguments:
# - the server IP/hostname (can be multiple servers seperated by spaces, default is github)
set -e
function doPing(){
	ping -c 1 "$1"|cut -d$'\n' -f2|cut -d "=" -f4
}
if [ -z "$*" ]; then
	sendComment "ping github.com: $(doPing github.com)"
	echo "$(doPing github.com)" >/dev/stderr
else
	for arg in "$@"; do
		sendComment "ping $arg: $(doPing "$arg")"
		echo "$(doPing "$arg")" >/dev/stderr
	done
fi

